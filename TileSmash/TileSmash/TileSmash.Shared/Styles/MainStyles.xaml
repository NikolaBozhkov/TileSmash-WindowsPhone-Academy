<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TileSmash.Styles">
    <Style TargetType="TextBlock" x:Key="MainFontStyle">
        <Setter Property="FontFamily" Value="Comic Sans MS" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    <Style TargetType="TextBlock" x:Key="GamePageMainFont" BasedOn="{StaticResource MainFontStyle}">
        <Setter Property="FontSize" Value="25" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <SolidColorBrush x:Key="TitleBackgroundBlue" Color="#0B9192" />
</ResourceDictionary>
